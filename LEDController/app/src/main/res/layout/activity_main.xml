<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

    <Spinner
      android:id="@+id/patternSpinner"
      android:layout_width="350dp"
      android:layout_height="31dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bluetoothButton" />

    <Switch
      android:id="@+id/powerSwitch"
      android:layout_width="wrap_content"
      android:layout_height="23dp"
      android:layout_marginStart="8dp"
      android:checked="false"
      app:layout_constraintBaseline_toBaselineOf="@+id/bluetoothButton"
      app:layout_constraintStart_toEndOf="@+id/powerText" />

    <Button
      android:id="@+id/bluetoothButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      android:text="Bluetooth"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/powerText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="Power:"
      android:textSize="18sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/powerSwitch"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/btStatusText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:textSize="18sp"
      app:layout_constraintBaseline_toBaselineOf="@+id/bluetoothButton"
      app:layout_constraintEnd_toStartOf="@+id/bluetoothButton" />

</android.support.constraint.ConstraintLayout>